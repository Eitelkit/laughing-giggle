<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"

        app:cardCornerRadius="10dp"
        app:cardElevation="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/cardViewImg"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:src="@drawable/welcome1"
                    android:layout_height="150dp"/>
                <TextView
                    android:id="@+id/cardViewTitle"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/cardViewImg"

                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:text="Restaurant Name"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <!--<TextView-->
                <!--android:id="@+id/news_info_desc"-->
                <!--android:lineSpacingExtra="5dp"-->
                <!--android:layout_below="@+id/relativelayout"-->
                <!--android:layout_margin="15dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="placeholder3"-->
                <!--android:layout_height="wrap_content"/>-->

            <RatingBar
                android:id="@+id/cardViewBar"
                style="@android:style/Widget.Material.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_marginTop="130dp"
                android:numStars="5"
                android:rating="4"
                android:rotation="0"
                android:stepSize="0.0000001" />

            <TextView
                android:id="@+id/cardViewRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textAlignment="center"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/cardViewPhone"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="dsfdfsdfsdfsdfsdf"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/cardViewAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/cardViewUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/Favorite"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageView
                    android:id="@+id/Dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_delete" /></LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>