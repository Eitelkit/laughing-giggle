<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"

        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="#eeeeee"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/cardViewImg"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:src="@color/cardview_dark_background" />

            <LinearLayout
                android:layout_width="172dp"
                android:layout_height="143dp"
                android:layout_weight="0.99"
                android:orientation="vertical"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/cardViewTitle"
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1.50"
                        android:fontFamily="serif"
                        android:gravity="left|center"
                        android:lines="2"
                        android:text="Title"
                        android:textAlignment="center"
                        android:textSize="12sp" />


                    <RatingBar
                        android:id="@+id/cardViewBar"
                        style="@android:style/Widget.Material.Light.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="20dp"
                        android:numStars="5"
                        android:rating="4"
                        android:rotation="0"
                        android:stepSize="0.0000001" />

                    <TextView
                        android:id="@+id/cardViewRate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="8"
                        android:textAlignment="center" />

                </LinearLayout>


                <TextView
                    android:id="@+id/cardViewPhone"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="dsfdfsdfsdfsdfsdf"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/cardViewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cardViewUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Favorite"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/ic_menu_add" />

                    <ImageView
                        android:id="@+id/Dislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/ic_delete" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>